{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build active file",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-g",
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "${file}",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compile current file with g++"
        },
        {
            "label": "build assignment",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "cd ${workspaceFolder}/modules/${input:moduleNumber}/assignment-template && mkdir -p build && cd build && cmake .. && make"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build assignment using CMake"
        },
        {
            "label": "run tests",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "cd ${workspaceFolder}/modules/${input:moduleNumber}/assignment-template/build && make test"
            ],
            "group": "test",
            "problemMatcher": [],
            "detail": "Run unit tests for assignment"
        },
        {
            "label": "clean build",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "cd ${workspaceFolder}/modules/${input:moduleNumber}/assignment-template/build && make clean"
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "Clean build artifacts"
        },
        {
            "label": "format code",
            "type": "shell",
            "command": "clang-format",
            "args": [
                "-i",
                "-style=Google",
                "${file}"
            ],
            "group": "none",
            "problemMatcher": [],
            "detail": "Format current file with clang-format"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "inputs": [
        {
            "id": "moduleNumber",
            "type": "promptString",
            "description": "Module number (e.g., module-01_ch1, module-02_ch2)",
            "default": "module-01_ch1"
        }
    ]
}